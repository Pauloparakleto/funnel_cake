		$('select_referer_match').observe('change', function(ev){
			$('referer_match').value = $('select_referer_match').value + $('text_referer_match').value;
			updateAnalyticsStats();
		});
		$('text_referer_match').observe('change', function(ev){
			$('referer_match').value = $('select_referer_match').value + $('text_referer_match').value;
			updateAnalyticsStats();
		});
	</script-->
	<br />
	<h3 style='display: inline;'>Visited Page:</h3>
	<%= text_field_tag 'visited_page_match', '',
		:onchange=>"updateAnalyticsStats();", :style=>"#{style}"
	%>
</div>