<%- style = '' if local_assigns[:style].nil? -%>
<div class="column span-6">
	<h3 style='display: inline;'>Date Period:</h3>
	<%= select_tag 'date_period',
	  options_for_select([['Monthly','monthly'],['Bi-Weekly', 'biweekly'], ['Weekly', 'weekly']], :selected=>(params[:date_period] || 'biweekly')),
		:onchange=>"updateAnalyticsStats();", :style=>"#{style}"
	%><br />
	<h3 style='display: inline;'>Landing Page:</h3>
	<%#= text_field_tag 'landing_page_match', '',
		:onchange=>"updateAnalyticsStats();", :style=>"#{style}" %>
	<%= select_tag 'landing_page_match', global_statistic_options_for_select(:landing_page), :onchange=>"updateAnalyticsStats();", :style=>"#{style}; width: 200px;" %>
	<br />
	<h3 style='display: inline;'>Referer:</h3>
	<%= select_tag 'referer_match', global_statistic_options_for_select(:referer), :onchange=>"updateAnalyticsStats();", :style=>"#{style}; width: 200px;" %>
	<%#= text_field_tag 'text_referer_match', '', :style=>"#{style}" %>
	<%#= hidden_field_tag 'referer_match', '' %>
